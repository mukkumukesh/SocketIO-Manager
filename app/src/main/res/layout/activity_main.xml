<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="connectSocket"
        android:text="Connect Socket" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="disconnectSocket"
        android:text="Disconnect Socket" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="emitID"
        android:text="Emit ID" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="emitEvent"
        android:text="Emit Event" />

    <TextView
        android:id="@+id/txv_socket_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Socket update" />

</LinearLayout>
